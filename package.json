{
    "name": "wedding-site",
    "version": "1.0.0",
    "description": "Wedding site for Dr. Shamika Shabnam and MD Ishtiaque Hossain",
    "main": "src/main.js",
    "scripts": {
      "build": "npm run build:css && npm run build:js",
      "serve": "live-server public",
      "watch:css": "tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
      "build:js": "esbuild src/main.js --bundle --outfile=public/bundle.js --loader:.js=jsx",
      "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
      "build:css": "tailwindcss -i ./src/styles.css -o ./public/styles.css",
      "watch:js": "esbuild src/main.js --bundle --outfile=public/bundle.js --loader:.js=jsx --watch"
    },
    "keywords": [
      "wedding",
      "tailwindcss"
    ],
    "author": "MD Ishtiaque Hossain",
    "license": "ISC",
    "dependencies": {
      "autoprefixer": "^10.4.19",
      "postcss": "^8.4.38",
      "tailwindcss": "^3.4.4"
    },
    "devDependencies": {
      "concurrently": "^8.2.2",
      "live-server": "^1.2.2",
      "esbuild": "^0.14.54"
    }
  }